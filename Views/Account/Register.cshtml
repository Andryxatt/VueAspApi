@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}
@model VueAsp.ViewModels.User.RegisterViewModel
<div class="row">
    <form class="col s12 m6 offset-m3" method="post" asp-controller="Account" asp-action="Register">
        <div class="row">
            <h3>Register new user</h3>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="input-field col s12">
                <input asp-for="Email" class="validate" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="input-field col s12">
                <input type="text" class="datepicker" asp-for="Birthday" />
                <label asp-for="Birthday"></label>
                <span asp-validation-for="Birthday"></span>
            </div>
            <div class="input-field col s12">
                <input asp-for="Password" class="validate" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="input-field col s12">
                <input asp-for="PasswordConfirm" class="validate" />
                <label asp-for="PasswordConfirm"></label>
                <span asp-validation-for="PasswordConfirm"></span>
            </div>
            <button class="btn waves-effect waves-yellow" type="submit" name="action">
                Register
                <i class="material-icons right">send</i>
            </button>
        </div>
    </form>
</div>