@model VueAsp.ViewModels.User.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}
    <div class="row">
        <form class="col s12 m6 offset-m3" method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div class="row">
                <h3>User authorization</h3>
                <div asp-validation-summary="ModelOnly"></div>
                <div class="input-field col s12">
                    <input asp-for="Email" placeholder="email@example.com" id="Email" type="email" class="validate">
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="input-field col s12">
                    <input asp-for="Password" placeholder="Placeholder" id="Password" type="Password" class="validate">
                    <label asp-for="Password">Password</label>
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="col s12">
                    <label>
                        <input asp-for="RememberMe" type="checkbox" checked="checked" />
                        <span>RememberMe</span>
                    </label>
                    <button class="btn waves-effect waves-light right" type="submit">
                        Submit
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </form>
    </div>
<style>
    .field-validation-error{
        color:red;
    }
</style>
